    await model.loadRecipe(id); //2) Rendering recipe once the data from loadRecipe() is available

    _recipeView.default.render(model.state.recipe); //TEST
    //3) Updating bookmarks view


    _bookmarksView.default.update(model.state.bookmarks);
  } catch (err) {
    _recipeView.default.renderError();
  }
};

const controlSearchResults = async function () {
  try {
    _resultsView.default.renderSpinner(); // 1) Get search query


    const query = _searchView.default.getQuery();

    if (!query) return; // 2) Load search results

